@model IEnumerable<WebAppFeatures.Models.DataModel.UserInfo>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Simple Table</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>User Name</th>
                                <th>Created Date</th>
                                <th>Status</th>
                            </thead>
                            <tbody>
                                @if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.FullName
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>
                                            <td>
                                                @item.UserName
                                            </td>
                                            <td>
                                                @item.CreatedDate
                                            </td>
                                            <td>
                                                @if (item.Deleted == false)
                                                {
                                                    <text>account here</text>
                                                }
                                                else
                                                {
                                                    <text>account deleted</text>
                                                }
                                            </td>
                                        </tr>
                                    }



            }
            else
            {
                <tr rowspan="5">No Data</tr>
            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>