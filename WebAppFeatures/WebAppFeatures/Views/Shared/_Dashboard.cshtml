<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="shortcut icon" href="~/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web App Features</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/paper-dashboard.css" rel="stylesheet" />
    <link href="~/dist-lisghtbox2-2.11.3/css/lightbox.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <div class="logo">
                <a href="" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="~/images/logo.png">
                    </div>
                </a>
                <a asp-action="Index" asp-controller="Dashboard" class="simple-text logo-normal">
                    Web App Features
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="navUser nav">
                    <li class="active">
                        <a asp-action="Index" asp-controller="Dashboard">
                            <i class="nc-icon nc-bank"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Profile" asp-controller="Dashboard">
                            <i class="nc-icon nc-single-02"></i>
                            <p>Profile</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Users" asp-controller="Dashboard">
                            <i class="nc-icon nc-tile-56"></i>
                            <p>List Users</p>
                        </a>
                    </li>
                    <li>
                        <a asp-action="ChangePassword" asp-controller="Dashboard">
                            <i class="nc-icon nc-key-25"></i>
                            <p>Change Password</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="javascript:;">
                            Web App Features
                        </a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="navbar-nav d-md-block d-xl-none d-lg-none">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Dashboard">
                                    <i class="nc-icon nc-bank"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Dashboard</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Profile" asp-controller="Dashboard">
                                    <i class="nc-icon nc-single-02"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Profile</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Users" asp-controller="Dashboard">
                                    <i class="nc-icon nc-tile-56"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">List Users</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ChangePassword" asp-controller="Dashboard">
                                    <i class="nc-icon nc-key-25"></i>
                                    <p>Change Password</p>
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Search" asp-action="Index">
                                    <i class="nc-icon nc-zoom-split"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Search</span>
                                    </p>
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="javascript:;" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="nc-icon nc-settings-gear-65"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Setting</span>
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-action="Logout" asp-controller="Dashboard"> <span class="nc-icon nc-button-power"></span> Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
            <br />
            <footer class="footer footer-black  footer-white ">
                <div class="container-fluid">
                    <div class="row">
                        <div class="credits ml-auto">
                            <span class="copyright">
                                Web App Features
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/assets/js/core/jquery.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap-notify.js"></script>
    <script src="~/dist-lisghtbox2-2.11.3/js/lightbox-plus-jquery.js"></script>
    <script src="~/dist-lisghtbox2-2.11.3/js/lightbox.js"></script>
    @await Component.InvokeAsync("Notyf")
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
