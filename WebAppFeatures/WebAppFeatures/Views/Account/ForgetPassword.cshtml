@model WebAppFeatures.ViewModel.ForgetPasswordViewModel

@{
    ViewData["Title"] = localizer["tilteForegetPage"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["InfoForegetVerfy"] != null)
{
    <div class="alert alert-info alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong> @TempData["InfoForegetVerfy"] </strong>
    </div>
}
@if (TempData["TokenErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong> @TempData["TokenErrorMessage"] </strong>
    </div>
}
<div class="row justify-content-md-center m-3">
    <div class="col-md-6">
        <h1>@localizer["tilteForget"]</h1>
        <form method="post" asp-controller="Account" asp-action="ForgetPassword" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer["btnForget"]" class="btn btn-primary btn-block" />
            </div>
        </form>
        <div class="form-group">
            <a asp-action="Login" asp-controller="Account">@localizer["LoginPage"]</a>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
